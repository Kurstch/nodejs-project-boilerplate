{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "skipDefaultLibCheck": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "types": [
            "vitest/importMeta",
            "node"
        ]
    },
    "include": [
        "./src/**/*"
    ]
}
